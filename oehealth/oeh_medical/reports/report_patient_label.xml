<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_patient_label">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                 <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <table class="table table-condensed" style="border: 3px solid black !important;">
                            <tr>
                                <td width="40%">
                                    <p style="text-align:center;padding-top:10px;">
                                        <img t-if="not o.image_medium" t-att-src="'/web/static/src/img/placeholder.png'" height="120" border="1" width="120"/>
                                        <img t-if="o.image_medium" t-att-src="image_data_uri(o.image_medium)" height="120" border="1" width="120"/>
                                    </p>
                                    <p style="text-align:center;">
                                        <strong><span t-field="o.name"/></strong>
                                    </p>
                                </td>
                                <td width="60%">
                                    <table>
                                        <tr>
                                            <td>
                                                <p style="text-align:left;padding-top:10px;" t-field="o.identification_code"/>
                                                <p style="text-align:left;" t-field="o.dob"/>
                                                <p style="text-align:left;" t-field="o.age"/>
                                                <p style="text-align:left;" t-field="o.sex"/>
                                                <p style="text-align:left;" t-field="o.marital_status"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>